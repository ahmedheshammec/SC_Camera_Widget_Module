<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('partner-picture')]" position="before">
            <div class="left" style="text-align:left;padding-right:0px" dir="rtl">
                <button
                        class=" btn btn-light border-0 rounded-circle m-1 p-1"
                        data-tooltip="Capture"
                        aria-label="Capture"
                        t-on-click="onOpenCam">
                    <i class="fa fa-camera fa-fw"/>
                </button>
            </div>
        </xpath>
    </t>
</templates>